{
  "name": "@platformrocks/create",
  "version": "0.2.0",
  "description": "⏏ Bootstrap CLI for OpenSource.Rocks projects",
  "license": "MIT",
  "type": "module",
  "bin": {
    "platformrocks": "dist/cli.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "sideEffects": false,
  "dependencies": {
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "giget": "^2.0.0",
    "kolorist": "^1.8.0",
    "ora": "^8.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/node": "^24.2.1",
    "@types/prompts": "^2.4.9",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx src/index.ts",
    "test": "tsx src/index.ts --dry-run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check",
    "fix": "pnpm lint:fix && pnpm format",
    "prepare": "husky install",
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "commit": "git-cz"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix --max-warnings=0 --",
      "prettier --write --"
    ],
    "**/*.{json,md}": [
      "prettier --write --"
    ]
  },
  "keywords": [
    "cli",
    "scaffold",
    "bootstrap",
    "template",
    "create",
    "platformrocks"
  ],
  "author": "platform.rocks",
  "homepage": "https://github.com/platformrocks/osr.create#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/platformrocks/osr.create.git"
  },
  "bugs": {
    "url": "https://github.com/platformrocks/osr.create/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
