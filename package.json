{
  "name": "@platformrocks/create",
  "version": "0.1.0",
  "description": "â Bootstrap CLI for OpenSource.Rocks projects",
  "license": "MIT",
  "type": "module",
  "bin": {
    "platformrocks": "bin/create.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "giget": "^2.0.0",
    "kolorist": "^1.8.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^24.2.1",
    "@types/node-fetch": "^2.6.13",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx src/index.ts",
    "test": "tsx src/index.ts --dry-run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json,md}",
    "format:check": "prettier --check src/**/*.{ts,js,json,md}",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "cli",
    "scaffold",
    "bootstrap",
    "template",
    "create",
    "platformrocks"
  ],
  "author": "platform.rocks",
  "homepage": "https://github.com/platformrocks/osr.create#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/platformrocks/osr.create.git",
    "directory": "packages/create"
  },
  "bugs": {
    "url": "https://github.com/platformrocks/osr.create/issues"
  }
}
